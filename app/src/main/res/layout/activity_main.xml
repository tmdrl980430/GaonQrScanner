<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_breakFast_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조식"
            tools:ignore="HardcodedText,UsingOnClickInXml" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_lunch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중식 | 일품"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_lunch_korea_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중식 | 한식"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_lunch_noodle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중식(면)"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_dinner_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="석식"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_ramen_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="라면"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_kim_bap_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김밥"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_hot_dog_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="핫도그"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_chicken_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="치킨"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/main_loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:indeterminateTint="@color/primary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>